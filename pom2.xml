	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
                    <layers>
                        <enabled>true</enabled>
                    </layers>
					<excludes>
						<exclude>
							<groupId>org.projectlombok</groupId>
							<artifactId>lombok</artifactId>
						</exclude>
					</excludes>
				</configuration>
			</plugin>

            <plugin>
                <groupId>org.openapitools</groupId>
				<artifactId>openapi-generator-maven-plugin</artifactId>
				<version>7.0.0</version>
                <executions>
                    <!-- Import Server Swagger -->
					<execution>
						<id>Import-Server-Swagger</id>
						<goals>
							<goal>generate</goal>
						</goals>
                        <phase>process-resources</phase>
						<configuration>
							<inputSpec>${project.basedir}${yaml-location-service}</inputSpec>
							<generatorName>spring</generatorName>
							<apiPackage>io.webz.percolatorcore.server</apiPackage>
                            <modelPackage>io.webz.percolatorcore.model</modelPackage>
                            <supportingFilesToGenerate>ApiUtil.java</supportingFilesToGenerate>
							<configOptions>
                                <delegatePattern>true</delegatePattern>
								<documentationProvider>springdoc</documentationProvider>
								<additionalModelTypeAnnotations>
@com.fasterxml.jackson.annotation.JsonInclude(com.fasterxml.jackson.annotation.JsonInclude.Include.NON_NULL)
@Valid
								</additionalModelTypeAnnotations>
								<disallowAdditionalPropertiesIfNotPresent>true</disallowAdditionalPropertiesIfNotPresent>
								<openApiNullable>true</openApiNullable>
								<useOptional>true</useOptional>
								<useJakartaEe>true</useJakartaEe>
								<useSpringBoot3>true</useSpringBoot3>
                                <generateApiTests>false</generateApiTests>
                                <generateModelTests>false</generateModelTests>
							</configOptions>
						</configuration>
					</execution>
                </executions>
            </plugin>
            <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>3.0.0</version>
				<executions>
					<execution>
						<?m2e execute onConfiguration?>
						<id>DeleteGradle</id>
						<phase>compile</phase>
						<configuration>
							<target>
								<delete dir="${project.build.directory}\generated-sources\openapi"  includes="**\*gradle*"/>
								<delete dir="${project.build.directory}\generated-sources\openapi\gradle"/>
								<delete dir="${project.build.directory}\generated-sources\openapi\.gradle"/>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
